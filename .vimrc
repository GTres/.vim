set number "Mostrar numeros de linea
set showmatch "Mostrar parentesis emparejados
set tabstop=2
set expandtab
set shiftwidth=2
set autoindent
set smartindent
set cindent
colorscheme minimalist "Aplicar esquema de colores minimalist

set laststatus=2 "activar vim-air-line
let g:airline#extensions#tabline#enabled = 1 " Enable tabline
helptags $HOME/.vim/doc " Activar ayuda de vimairline y los que se agreguen
let g:airline#themes#molokai#palette = {}



